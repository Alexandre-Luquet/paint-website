{% extends 'base.html.twig' %}
{% block title %}Mes expositions!{% endblock %}
{% block body %}
    {# NAV  #}
    <div class="menu">
        <div class="bar"></div>
    </div>
    <div class="overlay"></div>
    <header>
        {% include 'nav.html.twig' %}
    </header>

        <div class="container-fluid">
            <h1 class="text-center mt-5 gallerie-title">Ma galerie d'art virtuelle</h1>
            <div class="row raw mt-5">
                {% for monTableau in galerie %}
                    <div class="col-lg-2 ml-3 mt-2">
                        <a href="#" class="btn-article-content"><img src="{{ asset('images/galerie/' ~ monTableau.image) }}" class="rounded float-left" alt="..."></a>
                        <a href="/tableau/{{ monTableau.id }}" >{{ monTableau.titre }}</a>
                    </div>
                {% endfor %}
            </div>
        </div>

        <!-- MODAL GALLERIE-->
        <div class="modal" tabindex="-1" role="dialog" id="modal-article-content">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Gallerie</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Fermer">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary fermer">Fermer</button>
                    </div>
                </div>
            </div>
        </div>
{% endblock %}
