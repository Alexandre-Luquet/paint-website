{% extends 'base.html.twig' %}
{% block title %}Galerie Virtuelle{% endblock %}
{% block body %}
    {# NAV  #}
    <div class="menu">
        <div class="bar"></div>
    </div>
    <div class="overlay"></div>
    <header>
        {% include 'nav.html.twig' %}
    </header>

        <div class="container-fluid">
            <h1 class="text-center mt-5 gallerie-title">Ma galerie d'art virtuelle</h1>
            <div class="row raw mt-5">
        {% for monTableau in galerie %}
{#                    <div class="col-lg-2 ml-3 mt-2 mb-4">#}
{#                        <a class="btn-article-content" href="{{ path('app_tableau_ajaxrequest', {'id': monTableau.id}) }}">#}
{#                            <img src="{{ asset('images/galerie/' ~ monTableau.image) }}" class="rounded float-left" alt="{{ asset('images/galerie/' ~ monTableau.titre) }}">#}
{#                        </a>#}
{#                        <a class="text-decoration-none" href="{{ path('app_tableau_showtableau', {'id': monTableau.id}) }}">#}
{#                            <p class="text-center">{{ monTableau.titre }}</p>#}
{#                        </a>#}
{#                    </div>#}

            <div class="card col-lg-2 ml-3 mt-2 mb-4" style="width: 18rem; background-color: transparent; border: none">
                <a class="btn-article-content" href="{{ path('app_tableau_ajaxrequest', {'id': monTableau.id}) }}">
                <img class="card-img-top" src="{{ asset('images/galerie/' ~ monTableau.image) }}" alt="Card image cap">
                </a>
                <div class="card-body">
                    <p class="card-text text-center"><a class="text-decoration-none" href="{{ path('app_tableau_showtableau', {'id': monTableau.id}) }}">
                    {{ monTableau.titre }}
                    </a></p>
                </div>
            </div>
                {% endfor %}
            </div>
        </div>

        <!-- MODAL GALLERIE-->
        <div class="modal" tabindex="-1" role="dialog" id="modal-article-content">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Galerie</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Fermer">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body"></div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary fermer">Fermer</button>
                    </div>
                </div>
            </div>
        </div>
{% endblock %}
