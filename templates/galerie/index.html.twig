{% extends 'base.html.twig' %}

{% block title %}Galerie de cadre{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Bienvenu sur ma galerie</h1>

    {% for monTableau in galerie %}
        <p>
            <a href="/tableau/{{ monTableau.getId }}"><img src="{{ monTableau.getImage }}"></a><br>
            {{ monTableau.getTitre }}<br>
            Lien = /tableau/{{ monTableau.getId }}<br>
        </p>
    {% endfor %}


</div>
{% endblock %}
