{% extends 'base.html.twig' %}
{% block title %}Mes expositions!{% endblock %}
{% block body %}
      {# NAV  #}
    <div class="menu">
        <div class="bar"></div>
    </div>
    <div class="overlay"></div>
    <header>
        {% include 'nav.html.twig' %}
    </header>

    <div>
        <h3 class="text-center mt-5 h3-bio">Mes expositions</h3>

        {% for exposition in expositions %}
            <p>
                <a href="/exposition/{{ exposition.getId }}"><img src="{{ exposition.getImage }}"></a><br>
                {{ exposition.getTitre }}<br>
                Lien = /exposition/{{ exposition.getId }}<br>
            </p>
        {% endfor %}


    </div>
{% endblock %}
