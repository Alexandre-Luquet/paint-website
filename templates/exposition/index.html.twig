{% extends 'base.html.twig' %}
{% block title %}Mes expositions!{% endblock %}
{% block body %}
    <body style="background-image: linear-gradient(to right top, #9f84a3, #9496b3, #91a5b8, #9cb2b9, #afbcbb);">
      {# NAV  #}
    <div class="menu">
        <div class="bar"></div>
    </div>
    <div class="overlay"></div>
    <header>
        {% include 'nav.html.twig' %}
    </header>

        <h3 class="text-center mt-5 h3-bio">Mes expositions</h3>

        {% for exposition in expositions %}
        <div class="container mt-5">
            <div class="row">
                <div class="col-8 mx-auto text-center">
                    <div class="card">
                        <img class="card-img-top" src="{{ exposition.image }}" alt="Card image cap">
                        <div class="card-body">
                            <h5 class="card-title">{{ exposition.titre }}</h5>
                            <p class="card-text pb-5 mt-1">{{ exposition.description}}</p>
                            <p class="card-footer">
                               Lieu : {{ exposition.lieu }} Ã  {{ exposition.horaire }}
                                commence le {{ exposition.dateDebut|date('d/m/y')}},
                                fini le {{ exposition.dateFin|date('d/m/y') }}</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% endfor %}
    </body>
{% endblock %}
