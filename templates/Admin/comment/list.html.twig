{% extends 'base.html.twig' %}

{% block title %}Gestion des commentaires{% endblock %}

{% block body %}
<body style="background-color: #aec5bb;">
    {# NAV  #}
    <div class="menu">
        <div class="bar"></div>
    </div>
    <div class="overlay"></div>
    <header>
        {% include 'nav.html.twig' %}
    </header>

    <h1 class="text-center mt-5">Liste des commentaires</h1>

    <div class="container-fluid mt-3">
        <div class="row">
            <div class="col-md-10 col-sm-12 mx-auto text-center">
                <table class="table table-striped table-dark mb-0 mt-5" id="admin-table">
                    <tr>
                        <th>Tableau</th>
                        <th>Commentaire</th>
                        <th>Utilisateur</th>
                        <th>Date de publication</th>
                        <th>Actions</th>
                    </tr>
                    {% for comment in comments %}
                        <tr>
                            <td>{{ comment.tableau.titre }}</td>
                            <td>{{ comment.contenu }}</td>
                            <td>{{ comment.user }}</td>
                            <td>{{ comment.datePublication|date('d/m/y') }}</td>
                            <td class="d-flex justify-content-center">
                                <a class="btn btn-primary btn-sm mr-3" href="{{ path('app_admin_comment_index', {'id': comment.id}) }}">
                                    Modifier
                                </a>
                                <a href="{{ path('app_admin_comment_delete', {'id': comment.id}) }}" class="btn btn-delete btn-danger btn-sm">
                                    Supprimer
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                </table>
            </div>
        </div>
    </div>
</body>
{% endblock %}
