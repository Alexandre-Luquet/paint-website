{% extends 'base.html.twig' %}

{% block body %}
    <body style="background-color: #aec5bb;">

    <h1>Commentaire du tableau "{{ tableau.titre }}"</h1>

    <table class="table table-striped table-dark mb-0 mt-5" id="admin-table">
        <tr>
            <th>Utilisateur</th>
            <th>Contenu</th>
            <th>Date</th>
            <th></th>
        </tr>
        {% for comment in tableau.comments %}
            <tr>
                {{ form_start(form) }}
                <td>{{ comment.user }}</td>
                <td>{{ form_row(form.contenu) }}</td>
                <td>{{ comment.datePublication|date('d/m/Y H:i') }}</td>
                <td>
                    <button type="submit" class="btn btn-primary">
                        Enregistrer
                    </button>
                    <a href="{{ path('app_admin_comment_delete', {'id': comment.id}) }}"
                       class="btn btn-danger">
                        Supprimer
                    </a>
                </td>
                {{ form_end(form) }}
            </tr>
        {% endfor %}
    </table>
    </body>
{% endblock %}