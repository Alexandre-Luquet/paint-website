{% extends 'base.html.twig' %}

{% block body %}
            {# NAV  #}
<div class="menu">
    <div class="bar"></div>
</div>
<div class="overlay"></div>
<header>
    {% include 'nav.html.twig' %}
</header>
    <h1 class="text-center mt-5"> Edition des Oeuvres </h1>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 col-sm-12 mx-auto text-center">
            {{ form_start(form) }}

            {{ form_row(form.titre) }}
            {{ form_row(form.image) }}
            {{ form_row(form.annee) }}
            {{ form_row(form.technique) }}
            {{ form_row(form.format) }}
            {{ form_row(form.description) }}
            {{ form_row(form.carrousel) }}

    {% if original_image is not null %}
        <p>
            Actuellement :
            <img src="{{ asset('images/galerie/' ~ original_image) }}" height="200px">
        </p>
    {% endif %}

    <div class="text-right">
        <button type="submit" class="btn btn-primary">
            Enregistrer
        </button>
        <a href="{{ path('app_admin_tableau_index') }}" class="btn btn-outline-secondary">
            Retour
        </a>
    </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>

{% endblock %}

