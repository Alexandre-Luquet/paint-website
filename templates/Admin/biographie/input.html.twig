{% extends 'base.html.twig' %}

{% block body %}
<body style="background-color: #aec5bb;">
    {# NAV  #}
    <div class="menu">
        <div class="bar"></div>
    </div>
    <div class="overlay"></div>
    <header>
        {% include 'nav.html.twig' %}
    </header>
    <h1 class="text-center mt-5">Votre biographie</h1>

    <div class="container mt-3">
        <div class="row">
            <div class="col-9 mx-auto text-center mt-3">
                {{ form_start(form) }}
                {{ form_row(form.photo) }}
                <div class="row mt-4 pb-4">
                <div class="col-4">
                    <img src="{{ asset('/images/biographie/' ~ original_image) }}" class="img-fluid">
                </div>
                    <div class="col-8">{{ form_row(form.presentation) }}</div>
                </div>
                {{ form_row(form.description) }}

                <div class="text-right">
                    <a href="{{ path('app_biographieshow_show') }}" class="btn btn-secondary mt-1">
                        Retour
                    </a>
                    <button type="submit" class="btn btn-primary mt-1">
                        Modifier
                    </button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</body>
{% endblock %}