{% extends 'base.html.twig' %}

{% block body %}
    {# NAV  #}
    <div class="menu">
        <div class="bar"></div>
    </div>
    <div class="overlay"></div>
    <header>
        {% include 'nav.html.twig' %}
    </header>
    <h1 class="text-center mt-5">Votre biographie</h1>

    <div class="container mt-2">
        <div class="row">
            <div class="col-8 mx-auto text-center mt-2">
                {{ form_start(form) }}
                {{ form_row(form.photo) }}
                <img src="{{ asset('/images/biographie/' ~ original_image) }}" class="img-fluid mt-2 pb-3">
                {{ form_row(form.description) }}
                {{ form_row(form.presentation) }}

                <div class="text-right">
                    <a href="{{ path('app_biographieshow_show') }}" class="btn btn-secondary mt-1">
                        Retour
                    </a>
                    <button type="submit" class="btn btn-primary mt-1">
                        Modifier
                    </button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}