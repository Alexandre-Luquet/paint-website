{% extends 'base.html.twig' %}

{% block title %}Gestion des membres{% endblock %}

{% block body %}

    <table class="table">
        <tr>
            <th>Pseudo</th>
            <th>Nom</th>
            <th>Prénom</th>
            <th>Mail</th>
            <th>Rôle</th>
        </tr>
        {% for user in users %}
            <tr>
                <td>{{ user.username }}</td>
                <td>{{ user.lastname }}</td>
                <td>{{ user.firstname }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.role }}</td>
                <td>
                    <a class="btn btn-primary btn-sm" href="{{ path('app_admin_membre_edit', {'id': user.id}) }}">
                        Modifier
                    </a>
                    <a href="{{ path('app_admin_membre_delete', {'id': user.id}) }}" class="btn btn-delete btn-danger btn-sm">
                        Supprimer
                    </a>
                </td>
            </tr>
        {% endfor %}
    </table>

{% endblock %}
