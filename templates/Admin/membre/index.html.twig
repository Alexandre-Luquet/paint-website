{% extends 'base.html.twig' %}

{% block title %}Gestion des membres{% endblock %}

{% block body %}
    {# NAV  #}
    <div class="menu">
        <div class="bar"></div>
    </div>
    <div class="overlay"></div>
    <header>
        {% include 'nav.html.twig' %}
    </header>
<body style="background-color: #aec5bb;">
    <h1 class="text-center mt-5">Liste des membres</h1>

<div class="container-fluid mt-3">
    <div class="row">
        <div class="col-md-10 col-sm-12 mx-auto text-center">
    <table class="table table-striped table-dark mb-0 mt-5" id="admin-table">
        <tr>
            <th>Pseudo</th>
            <th>Nom</th>
            <th>Prénom</th>
            <th>Mail</th>
            <th>Rôle</th>
            <th>Actions</th>
        </tr>
        {% for user in users %}
            <tr>
                <td>{{ user.username }}</td>
                <td>{{ user.lastname }}</td>
                <td>{{ user.firstname }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.role }}</td>
                <td class="d-flex justify-content-center">
                    <a class="btn btn-primary btn-sm ml-3" href="{{ path('app_admin_membre_edit', {'id': user.id}) }}">
                        Modifier
                    </a>
                    <a href="{{ path('app_admin_membre_delete', {'id': user.id}) }}" class="btn btn-delete btn-danger btn-sm ml-3">
                        Supprimer
                    </a>
                </td>
            </tr>
        {% endfor %}
    </table>
        </div>
    </div>
</div>
</body>
{% endblock %}
