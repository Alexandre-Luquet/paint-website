{% extends 'base.html.twig' %}

{% block title %}Modification du membre{% endblock %}

{% block body %}
    {# NAV  #}
    <div class="menu">
        <div class="bar"></div>
    </div>
    <div class="overlay"></div>
    <header>
        {% include 'nav.html.twig' %}
    </header>

    <h1 class="text-center mt-5"> Modification de l'utilisateur </h1>
<div class="container mt-5">
    <div class="row">
        <div class="col-8 mx-auto text-center">
            {{ form_start(form) }}
            {{ form_row(form.username) }}
            {{ form_row(form.firstname) }}
            {{ form_row(form.lastname) }}
            {{ form_row(form.email) }}
            {{ form_row(form.role) }}
            <div class="text-right">
                <button type="submit" class="btn btn-primary">
                    Enregistrer
                </button>
                <a href="{{ path('app_admin_membre_index') }}" class="btn btn-outline-secondary">
                    Retour
                </a>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}


