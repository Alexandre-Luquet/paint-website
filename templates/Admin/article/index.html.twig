{% extends 'base.html.twig' %}

{% block body %}
<body style="background-color: #aec5bb;">
    {# NAV  #}
    <div class="menu">
        <div class="bar"></div>
    </div>
    <div class="overlay"></div>
    <header>
        {% include 'nav.html.twig' %}
    </header>
    <div class="container-fluid mt-3">
        <div class="row">
            <div class="col-8 mx-auto text-center">
                <h1 class="text-center mt-5">Liste des Articles</h1>
                <a class ="btn btn-info mt-5" id="btn-admin" href ="{{ path('app_admin_article_edit') }}">Ajouter un article</a>
    <table class="table table-striped table-dark mb-0 mt-5" id="admin-table">
        <tr>
            <th>Titre</th>
            <th>Date de publication</th>
            <th>Cat√©gorie</th>
            <th>Actions</th>
        </tr>
        {% for article in articles %}
            <tr>
                <td>{{ article.titre }}</td>
                <td>{{ article.datePublication|date('d/m/Y') }}</td>
                <td>{{ article.category }}</td>
                <td class="d-flex">
                    <a class="btn btn-primary btn-sm mr-4" href="{{ path('app_admin_article_edit', {'id': article.id}) }}">
                        Modifier
                    </a>
                    <a href="{{ path('app_admin_article_delete', {'id': article.id}) }}" class="btn btn-delete btn-danger btn-sm">
                        Supprimer
                    </a>
                </td>
            </tr>
        {% endfor %}
    </table>
            </div>
        </div>
    </div>
</body>
{% endblock %}